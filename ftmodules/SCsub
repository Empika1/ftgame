# SCsub

Import('env')

modules_env = env.Clone()
modules_env.Append(
    CPPPATH=[".", "render", "sim_adapter"],
    CXXFLAGS=["-std=c++20"]
)

modules_env['godot'] = True
SConscript('ftlib/src/SCsub')

modules_env.add_source_files(modules_env.modules_sources, "*.cpp") # Add all cpp files to the build
modules_env.add_source_files(modules_env.modules_sources, "render/*.cpp")
modules_env.add_source_files(modules_env.modules_sources, "sim_adapter/*.cpp")